@using Interfaces.DTO
@model IEnumerable<TriggerDTO>
@{
    ViewBag.Title = "Triggers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <table>
        <tr>
            <td>
                <h4>Name</h4>
            </td>
            <td></td>
            <td></td>
        </tr>
        @foreach (TriggerDTO ctrl in Model)
        {
            <tr>
                <td>@ctrl.Name</td>
                <td>
                    <p>@Html.RouteLink("Details", "Room", new { action = "Details", controller = "Trigger", id = ctrl.Id })</p>
                </td>
                <td>
                    <p>@Html.RouteLink("Edit", "Room", new { action = "Edit", controller = "Trigger", id = ctrl.Id })</p>
                </td>
                <td>
                    <p>@Html.RouteLink("Delete", "Room", new { action = "Delete", controller = "Trigger", id = ctrl.Id })</p>
                </td>
                <td>
                    <p>@Html.RouteLink("Create", "Room", new { action = "Create", controller = "Trigger" })</p>
                </td>
            </tr>
        }
    </table>
</div>

