@using SmartHouseWebSite.Models
@model IEnumerable<SensorViewModel>
@{
    ViewBag.Title = "Sensors";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <table>
        <tr>
            <td><h4>Name</h4></td>
            <td></td>
            <td></td>
        </tr>
        @foreach (SensorViewModel ctrl in Model)
        {
        <tr>
            <td>@ctrl.Name</td>
            <td><p><a href="/Sensor/Details/@ctrl.Id">Details</a></p></td>
            <td><p><a href="/Sensor/Edit/@ctrl.Id">Edit</a></p></td>
            <td><p><a href="/Sensor/Delete/@ctrl.Id">Delete</a></p></td>
            <td><p><a href="/Sensor/Create">Create</a></p></td>
        </tr>
        }
    </table>
</div>
